<%= render 'shared/navbar' %>

<div class='container'>
  <div class='row'>
    <div class='col-md-8'>
      <iframe width="100%" height="450" src="https://www.youtube.com/embed/<%= @video.youtube_id %>" frameborder="0" allowfullscreen></iframe>
      <h2><%= @video.name %></h2>

      <div class='media'>
        <div class='media-left'>
          <%= link_to '/creator/' + @video.creator.slug do %>
            <%= image_tag 'creators/' + @video.creator.avatar, width: 88, class: 'media-object' %>
          <% end %>
        </div>

        <div class='media-body'>
          <%= link_to '/creator/' + @video.creator.slug do %>
            <h3 class='media-heading'><%= @video.creator.name %></h3>
          <% end %>

          <p>
            <b>Tags:</b> 
            
            <% @tags.each do |t| %>
              <%= link_to '/search/' + t.name do %>
                <span class='label label-primary'><%= t.name %></span>
                &nbsp;
              <% end %>
            <% end %>
          </p>
        </div>
      </div>

      <hr />

      <h3>Products</h3>

      <div class='row'>
        <% @products.each do |p| %>
          <div class='col-md-4'>
            <%= link_to '/product/' + p.id.to_s do %>
              <%= image_tag 'products/' + p.image, class: 'img-responsive img-thumbnail' %>
            <% end %>

            <p style='margin-top: 10px'><b><%= p.name %></b></p>
          </div>
        <% end %>
      </div>
    </div>

    <div class='col-md-3 col-md-offset-1'>
      <h2>Related</h2>

      <div class='row'>
        <img src='http://placehold.it/640x480' class='img-responsive'/>
      </div>

      <br />

      <div class='row'>
        <img src='http://placehold.it/640x480' class='img-responsive'/>
      </div>

      <br />

      <div class='row'>
        <img src='http://placehold.it/640x480' class='img-responsive'/>
      </div>
    </div>
  </div>
</div>